<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="1" author="evgnanii">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)"/>
            <column name="restaurant_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="cost" type="double"/>
            <column name="rating" type="double"></column>
            <column name="weight" type="varchar(50)"></column>
            <column name="discount" type="double"></column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="evgnanii">
        <insert tableName="products">
            <column name="name" value="Пицца Маргарита"/>
            <column name="restaurant_id" value="1"/>
            <column name="cost" value="500"/>
            <column name="rating" value="5.0"/>
            <column name="weight" value="1000g"/>
            <column name="discount" value="10"/>

        </insert>
        <insert tableName="products">
            <column name="name" value="Паста с сыром"/>
            <column name="restaurant_id" value="1"/>
            <column name="cost" value="300"/>
            <column name="rating" value="4.7"/>
            <column name="weight" value="300g"/>
            <column name="discount" value="0"/>

        </insert>
        <insert tableName="products">
            <column name="name" value="Гамбургер"></column>
            <column name="cost" value="200"/>
